{
  "name": "persona-platform",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "node server.js",
    "build": "next build",
    "start": "NODE_ENV=production node server.js",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "test": "vitest run --coverage",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:e2e": "playwright test",
    "qa": "npm run typecheck && npm run lint && npm run test && npm run build && npm run test:e2e",
    "reset-local": "node scripts/reset-local.ts",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "prisma:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:seed": "node scripts/seed.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "@prisma/client": "5.20.0",
    "bcryptjs": "2.4.3",
    "dockerode": "4.0.2",
    "imapflow": "1.0.199",
    "ioredis": "5.4.1",
    "jsonwebtoken": "9.0.2",
    "next": "15.5.9",
    "nodemailer": "6.9.16",
    "playwright": "1.51.1",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "ws": "^8.18.3",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@playwright/test": "1.51.1",
    "@storybook/nextjs": "10.1.11",
    "@types/bcryptjs": "2.4.2",
    "@types/dockerode": "3.3.30",
    "@types/jsonwebtoken": "9.0.7",
    "@types/node": "22.9.0",
    "@types/nodemailer": "6.4.15",
    "@types/react": "19.0.1",
    "@types/react-dom": "19.0.1",
    "@vitest/coverage-v8": "2.1.4",
    "autoprefixer": "10.4.20",
    "eslint": "9.13.0",
    "eslint-config-next": "15.5.9",
    "jsdom": "25.0.1",
    "postcss": "8.4.49",
    "prettier": "3.3.3",
    "prisma": "5.20.0",
    "tailwindcss": "3.4.15",
    "typescript": "5.6.3",
    "vitest": "2.1.4"
  }
}
